<c:FragmentDefinition xmlns="sap.m"
    xmlns:c="sap.ui.core">
    <TableSelectDialog search="onFOLocationTableSelectDialogSearch"  confirm="onFOLocationTableSelectDialogConfirm" cancel="onFOLocationTableSelectDialogConfirm" items="{path:'/FOLocation',
    sorter:{path:'externalCode'}}" multiSelect="true" contentWidth="40%" contentHeight="70%" >
        <columns>
            <Column >
                <Label text="{i18n>Location}"></Label>
            </Column>
            <Column >
                <Label text="{i18n>name}"></Label>
            </Column>
            <Column >
                <Label text="{i18n>description}"></Label>
            </Column>
        </columns>
        <items>
            <ColumnListItem >
                <ObjectNumber number="{externalCode}"></ObjectNumber>
                <Text text="{name}"></Text>
                <Text text="{description}"></Text>
            </ColumnListItem>
        </items>
    </TableSelectDialog>
</c:FragmentDefinition>